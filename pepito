<body>

<div class="card">
    <h1>üß† Trivia Pro</h1>

    <div class="info">
        <span>üìö <span id="category"></span></span>
        <span>‚è± <span id="timer">10</span>s</span>
    </div>

    <div class="info">
        <span>üî• Nivel <span id="level">1</span></span>
        <span>‚≠ê <span id="score">0</span></span>
    </div>

    <h3 id="question"></h3>

    <div id="options"></div>

    <button id="nextBtn">Siguiente</button>
    <button id="restartBtn">üîÑ Jugar de nuevo</button>

    <h3>üèÜ Ranking</h3>
    <ul id="ranking"></ul>
</div>

<script>
const questions = {
    facil: [
        { q: "¬øCapital de Argentina?", o: ["Buenos Aires", "C√≥rdoba", "Rosario"], a: 0, c: "Geograf√≠a" },
        { q: "¬øColor del cielo?", o: ["Rojo", "Azul", "Verde"], a: 1, c: "General" }
    ],
    medio: [
        { q: "¬øQui√©n pint√≥ la Mona Lisa?", o: ["Picasso", "Da Vinci", "Van Gogh"], a: 1, c: "Arte" },
        { q: "¬øPlaneta m√°s grande?", o: ["Marte", "J√∫piter", "Saturno"], a: 1, c: "Ciencia" }
    ],
    dificil: [
        { q: "¬øA√±o inicio 2¬∞ Guerra Mundial?", o: ["1939", "1941", "1945"], a: 0, c: "Historia" },
        { q: "¬øLenguaje del navegador?", o: ["Python", "JavaScript", "C++"], a: 1, c: "Programaci√≥n" }
    ]
};

let level = 1;
let score = 0;
let timer = 10;
let interval;
let current;

const qText = document.getElementById("question");
const optDiv = document.getElementById("options");
const scoreText = document.getElementById("score");
const timerText = document.getElementById("timer");
const levelText = document.getElementById("level");
const categoryText = document.getElementById("category");
const nextBtn = document.getElementById("nextBtn");
const restartBtn = document.getElementById("restartBtn");
const rankingList = document.getElementById("ranking");

let ranking = JSON.parse(localStorage.getItem("triviaRanking")) || [];
renderRanking();

startQuestion();

function startQuestion() {
    clearInterval(interval);
    timer = 10;
    timerText.textContent = timer;

    const diff = level === 1 ? "facil" : level === 2 ? "medio" : "dificil";
    current = questions[diff][Math.floor(Math.random() * questions[diff].length)];

    qText.textContent = current.q;
    categoryText.textContent = current.c;
    optDiv.innerHTML = "";
    nextBtn.style.display = "none";

    current.o.forEach((opt, i) => {
        const btn = document.createElement("button");
        btn.textContent = opt;
        btn.className = "option";
        btn.onclick = () => answer(i);
        optDiv.appendChild(btn);
    });

    interval = setInterval(() => {
        timer--;
        timerText.textContent = timer;
        if (timer <= 0) endGame();
    }, 1000);
}

function answer(i) {
    clearInterval(interval);
    if (i === current.a) {
        score++;
        scoreText.textContent = score;
        if (score % 3 === 0 && level < 3) {
            level++;
            levelText.textContent = level;
        }
    }
    nextBtn.style.display = "block";
}

nextBtn.onclick = startQuestion;

function endGame() {
    clearInterval(interval);
    qText.textContent = "üéâ Juego terminado";
    optDiv.innerHTML = "";
    nextBtn.style.display = "none";
    restartBtn.style.display = "block";

    const name = prompt("Tu nombre:");
    if (name) {
        ranking.push({ name, score });
        ranking.sort((a,b) => b.score - a.score);
        ranking = ranking.slice(0,5);
        localStorage.setItem("triviaRanking", JSON.stringify(ranking));
        renderRanking();
    }
}

function renderRanking() {
    rankingList.innerHTML = "";
    ranking.forEach((r,i) => {
        rankingList.innerHTML += `<li>${i+1}. ${r.name} ‚Äî ${r.score}</li>`;
    });
}

restartBtn.onclick = () => location.reload();
</script>

</body>
</html>
